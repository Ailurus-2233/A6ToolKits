<UserControl x:Class="A6ToolKits.Layout.Container.Controls.StatusBar"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450" d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid VerticalAlignment="Center" RowDefinitions="Auto, Auto">
        <Separator Grid.Row="0" Margin="0" />
        <DockPanel Grid.Row="1">
            <StackPanel x:Name="LeftStatus"
                        Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"
                        DockPanel.Dock="Left" Orientation="Horizontal" />
            <StackPanel x:Name="RightStatus"
                        Margin="0,0,5,0" HorizontalAlignment="Right" VerticalAlignment="Center"
                        DockPanel.Dock="Right" Orientation="Horizontal" />
            <StackPanel x:Name="CenterStatus"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        DockPanel.Dock="Bottom" Orientation="Horizontal" />
        </DockPanel>
    </Grid>
</UserControl>