<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:A6ToolKits.UIPackage.Styles.Layout.Tab.Converters"
                    xmlns:tab="clr-namespace:A6ToolKits.UIPackage.Controls.Layout.Tab">
    <ControlTheme x:Key="{x:Type tab:TabContainer}"
                  TargetType="tab:TabContainer">
        <ControlTheme.Resources>
            <converters:TabItemToDataContentConverter x:Key="TabItemToDataContentConverter" />
        </ControlTheme.Resources>
        <Setter Property="Template">
            <ControlTemplate>
                <ContentControl Content="{Binding Path=TabCollection.SelectedItem, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource TabItemToDataContentConverter}}" />
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>