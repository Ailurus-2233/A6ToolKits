<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:buttons="clr-namespace:A6ToolKits.UIPackage.Controls.Layout.Buttons"
                    xmlns:controls="clr-namespace:A6ToolKits.UIPackage.Controls"
                    xmlns:simple="clr-namespace:A6ToolKits.UIPackage.Controls.Simple">
    <!--  Add Resources Here  -->
    <ControlTheme x:Key="{x:Type buttons:CloseButton}"
                  TargetType="buttons:CloseButton">
        <Setter Property="Template">
            <ControlTemplate>
                <Button Padding="{TemplateBinding Padding}"
                        Width="{TemplateBinding IconSize}"
                        Height="{TemplateBinding IconSize}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        Command="{TemplateBinding Command}">
                    <simple:Icon IconImage="{DynamicResource CloseIcon}"
                                 IconSize="{TemplateBinding IconSize}"
                                 IsIconVisible="{TemplateBinding IsIconVisible}" />
                </Button>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>
