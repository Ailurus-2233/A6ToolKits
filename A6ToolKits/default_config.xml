<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>
    <!-- The path to load assemblies  -->
    <Libraries>
        <Path Path="./libs/a6toolkits"/>
        <Path Path="./libs/avalonia"/>
        <Path Path="./libs/third-party"/>
    </Libraries>

    <!-- List of modules that are automatically loaded -->
    <LoadModules>
        <Module Name="A6ToolKits.Root" Version="1.0.0" Assembly="A6ToolKits.dll" Target="A6ToolKits.BaseModule"/>
        <Module Name="A6ToolKits.MVVM" Version="1.0.0" Assembly="A6ToolKits.MVVM.dll"
                Target="A6ToolKits.MVVM.MVVMModule"/>
        <Module Name="A6ToolKits.UIPackage" Version="1.0.0" Assembly="A6ToolKits.UIPackage.dll"
                Target="A6ToolKits.UIPackage.UIPackageModule"/>
        <Module Name="A6ToolKits.Layout" Version="1.0.0" Assembly="A6ToolKits.Layout_bk.dll"
                Target="A6ToolKits.Layout.LayoutModule"/>
    </LoadModules>

    <!-- if use layout module, you can define layout configuration here -->
    <Layout Type="Window" Height="450" Width="600" BackgroundColor="#181818" PrimaryColor="#3377D2" 
            Assembly="A6ToolKits.Layout.dll" Target="A6ToolKits.Layout.Definer.LayoutDefiner" />
</Configuration>
